# ShortDramaVerse Environment Variables
# Copy this file to .env and fill in appropriate values

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Session Secret (change to a secure random string in production)
SESSION_SECRET=your-secret-key-here

# Client Configuration
VITE_API_URL=http://localhost:3000/api
VITE_APP_NAME=ShortDramaVerse

# Database Configuration (if using PostgreSQL instead of memory storage)
# DATABASE_URL=postgresql://username:password@localhost:5432/shortdramaverse

# Feature Flags
ENABLE_ADMIN_FEATURES=true
ENABLE_COIN_SYSTEM=true
ENABLE_ADVERTISEMENTS=true